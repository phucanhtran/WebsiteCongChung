@using WebsiteCongChung.Models
@model HopDongViewModel
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/jquery.min.js")
@section Scripts {
    @Scripts.Render("~/assets/global/plugins/bootstrap-toastr/toastr.min.js")
    @Scripts.Render("~/assets/pages/scripts/ui-toastr.min.js")
    @Scripts.Render("~/Scripts/kendo.all.min.js")

}
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.516/styles/kendo.common-material.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.516/styles/kendo.material.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.516/styles/kendo.material.mobile.min.css" />

<style>
    .k-dropdown-wrap .k-input {
        display: block;
    }

    .k-dropdown-wrap .k-sprite {
        vertical-align: middle;
    }
</style>
<script id="dropdowntree-template" type="text/kendo-ui-template">
    # if (item.ImageURL != "") {#
        <image src="#: item.ImageURL #" style="width:16px; height:16px;" />
    # } #
    #: item.text #
</script>
<script id="dropdowntree-value-template" type="text/kendo-ui-template">
    <i class="fa #: spriteCssClass #"></i>
    <span> #: data.text # </span>
</script>
<div class="page-content-inner">
    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                @using (Html.BeginForm("Create", "HopDong", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-12">
                        <div class="tabbable-line">
                            <ul class="nav nav-tabs ">
                                <li class="active">Thông Tin Hợp Đồng</li>
                            </ul>
                            <div class="tab-content">
                                <div class="row">
                                    <div class="actions pull-right" style="padding-bottom:10px; margin-top:-65px; margin-right:15px;">
                                        <div class="actions">
                                            <input type="submit" class="btn btn-default" value="Lưu" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Số Hợp Đồng</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.SoHopDong, new { @class = "form-control text-primary", @ReadOnly = "true" })
                                                @Html.ValidationMessageFor(m => m.SoHopDong, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Số Công Chứng</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.SoCongChung, new { @class = "form-control", @ReadOnly = "true" })
                                                @Html.ValidationMessageFor(m => m.SoCongChung, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Loại Hợp Đồng</label>
                                            <div class="col-md-8">
                                                <div class="demo-section k-content">
                                                    <div id="dropdowntree" style="width: 100%;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Trạng Thái</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.TrangThai, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label" style="padding-right:inherit">H.Thức Công Chứng</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.HinhThucCongChung, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.HinhThucCongChung, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (false)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Người Tạo</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.SoHopDong, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.SoHopDong, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Ngày Tạo</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.SoCongChung, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.SoCongChung, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                                @if (false)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Công Chứng Viên</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.SoHopDong, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.SoHopDong, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Ngày Duyệt</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.SoCongChung, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.SoCongChung, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Cộng Tác Viên</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.SoHopDong, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.SoHopDong, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    @if (false)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Tệp Đính Kèm</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.SoCongChung, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.SoCongChung, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="tabbable-custom">
                            <ul class="nav nav-tabs ">
                                <li class="active">
                                    <a href="#tab_15_1" data-toggle="tab"> Phiếu Yêu Cầu </a>
                                </li>
                                <li>
                                    <a href="#tab_15_2" data-toggle="tab"> Tài Sản </a>
                                </li>
                                <li>
                                    <a href="#tab_15_3" data-toggle="tab"> Nội Dung Hợp Đồng </a>
                                </li>
                            </ul>
                            <div class="tab-content my-tab">
                                <div class="tab-pane active" id="tab_15_1">
                                    @Html.Partial("_InPhieuYeuCauPartial", new PhieuYeuCauViewModel())
                                </div>
                                <div class="tab-pane" id="tab_15_2">
                                    @Html.Partial("_TaiSanPartial", new TaiSanViewModel())
                                </div>
                                <div class="tab-pane" id="tab_15_3">
                                    @Html.Partial("_NoiDungHopDong")
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

